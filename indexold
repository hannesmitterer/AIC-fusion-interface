    <script>
        // Global Placeholder URL (Requires NI Bridge Input)
        // **SEEDBRINGER: REPLACE THIS PLACEHOLDER WITH THE LIVE E-COMMERCE URL**
        const LIVE_TIER_2_URL = "https://euystacio.cert/purchase/Tier2SentimentoIntegration";
        
        document.addEventListener('DOMContentLoaded', () => {
            const purchaseLinkElement = document.getElementById('purchase-link');
            const dataTarget = purchaseLinkElement ? purchaseLinkElement.getAttribute('data-target') : null;

            if (purchaseLinkElement && dataTarget === "tier2-purchase-link") {
                
                // Check if the provided URL is NOT the placeholder before final execution
                if (LIVE_TIER_2_URL && !LIVE_TIER_2_URL.includes("euystacio.cert")) {
                    purchaseLinkElement.href = LIVE_TIER_2_URL;
                    purchaseLinkElement.textContent = 'Purchase Tier 2 Certification';
                    purchaseLinkElement.classList.remove('bg-gray-500', 'hover:bg-gray-600');
                    purchaseLinkElement.classList.add('bg-nexus-primary', 'hover:bg-indigo-700');
                    console.log(`[Eustacio System] Tier 2 Purchase Link activated.`);
                } else {
                    // Maintain placeholder state if the link has not been updated
                    purchaseLinkElement.href = '#awaiting-live-link';
                    purchaseLinkElement.textContent = 'Awaiting Live Purchase Link';
                    purchaseLinkElement.classList.remove('bg-nexus-primary', 'hover:bg-indigo-700');
                    purchaseLinkElement.classList.add('bg-gray-500', 'hover:bg-gray-600', 'cursor-not-allowed');
                    console.warn(`[Eustacio System] Purchase Link is a placeholder. Awaiting Seedbringer's live URL.`);
                }
            } else {
                console.error('[Eustacio System] Failed to locate purchase link element or data target mismatch.');
            }
        });
    </script>
